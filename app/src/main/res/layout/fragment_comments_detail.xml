<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CommentsDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/logo_acuenta2"
        android:layout_marginStart="80dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/Foto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin_vertical"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        tools:src="@drawable/perfil"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/nombreDelUsuario"
        android:layout_height="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginVertical="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/Foto"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        tools:text="@string/NombreDelUsuario"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/ultimaConexion"
        android:layout_height="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/Foto"
        app:layout_constraintBottom_toBottomOf="@id/Foto"
        tools:text="@string/UltimaConexion"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/asunto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginVertical="26dp"
        app:layout_constraintStart_toStartOf="@id/Foto"
        app:layout_constraintTop_toBottomOf="@id/Foto"
        tools:text="@string/Asunto1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/comentario"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="26dp"
        tools:text="@string/Comentario1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/asunto"
        app:layout_constraintTop_toBottomOf="@id/asunto" />

    <ImageView
        android:id="@+id/start1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        android:src="@drawable/start"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="40dp"
        android:scaleType="centerCrop"
        app:tint="@color/green"
        />

    <ImageView
        android:id="@+id/start2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        android:src="@drawable/start"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="70dp"
        android:scaleType="centerCrop"
        app:tint="@color/green"
        />

    <ImageView
        android:id="@+id/start3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        android:src="@drawable/start"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="100dp"
        android:scaleType="centerCrop"
        app:tint="@color/green"
        />

    <ImageView
        android:id="@+id/start4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        android:src="@drawable/start"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="130dp"
        android:scaleType="centerCrop"
        app:tint="@color/green"
        />

    <ImageView
        android:id="@+id/start5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        android:src="@drawable/start"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="160dp"
        android:scaleType="centerCrop"
        app:tint="@color/green"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_store"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start1"
        android:layout_marginVertical="26dp"
        tools:src="@drawable/shop"
        />

        <ImageView
            android:id="@+id/iconStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_store"
            app:layout_constraintTop_toBottomOf="@id/image_store"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/default_margin"
            />

        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintTop_toBottomOf="@id/nombre_tienda"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            />

        <TextView
            android:id="@+id/nombre_tienda"
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_store"
            app:layout_constraintStart_toStartOf="@id/iconStore"
            tools:text="Mi tienda"
            android:textColor="@color/black"
            android:layout_marginStart="28dp"
            android:textSize="16dp"
            android:layout_marginVertical="@dimen/default_margin"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/default_margin"

            />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            tools:text="@string/username"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="normal"
            android:layout_marginVertical="16dp"
            app:layout_constraintStart_toStartOf="@id/iconUser"
            app:layout_constraintTop_toBottomOf="@id/nombre_tienda"

            />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            tools:text="@string/direccion"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="normal"
            android:layout_marginVertical="16dp"
            app:layout_constraintStart_toStartOf="@id/iconDireccion"
            app:layout_constraintTop_toBottomOf="@id/contact_name"

            />

        <ImageView
            android:id="@+id/iconDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apartment"
            app:layout_constraintTop_toBottomOf="@id/contact_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="25dp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ellipse1"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ellipse2"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="645dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline5"
        android:src="@drawable/ellipse4"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="250dp" />

</androidx.constraintlayout.widget.ConstraintLayout>