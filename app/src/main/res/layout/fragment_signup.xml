<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignupFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="1dp"
        android:src="@drawable/logo_acuenta2"
        android:layout_marginStart="80dp"
        android:scaleType="centerCrop"

        />

    <com.google.android.material.textview.MaterialTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/registroCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:text="@string/registro"
        android:textColor="@color/yellow"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <com.google.android.material.textview.MaterialTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/fechaNacimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="300dp"
        android:text="@string/fecha"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_view_cuentaNueva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="590dp"
        android:text="¿Ya tienes cuenta?"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nombres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registroCuenta"
        app:layout_constraintBottom_toTopOf="@id/Apellidos"
        android:layout_marginHorizontal="@dimen/default_margin"

        android:hint="@string/nombres"
        android:layout_marginVertical="1dp"
        app:layout_constraintVertical_chainStyle="packed"

        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"
        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"
        app:boxCornerRadiusBottomStart="@dimen/RadioButton"

        app:helperTextTextColor="@color/design_default_color_error"
        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Apellidos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombres"
        android:layout_marginHorizontal="@dimen/default_margin"

        android:hint="@string/apellidos"
        android:layout_marginVertical="1dp"
        app:layout_constraintVertical_chainStyle="packed"

        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"
        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"
        app:boxCornerRadiusBottomStart="@dimen/RadioButton"

        app:helperTextTextColor="@color/design_default_color_error"
        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tipoDocumento"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:hint="@string/CC"

        app:boxBackgroundMode="outline"

        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"
        app:boxCornerRadiusBottomStart="@dimen/RadioButton"
        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"

        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:helperTextEnabled="false"
        app:helperTextTextColor="@color/design_default_color_error"

        app:layout_constraintTop_toBottomOf="@id/Apellidos"
        app:layout_constraintEnd_toStartOf="@id/documentoIdentidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/documentoIdentidad"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginVertical="230dp"
        android:hint="@string/NumeroDocumento"
        app:boxBackgroundMode="outline"

        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"

        app:boxCornerRadiusBottomStart="@dimen/RadioButton"
        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"

        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/design_default_color_error"
        app:layout_constraintStart_toEndOf="@id/tipoDocumento"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- TEXTO -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/anualidad"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:hint="@string/Año"

        app:boxBackgroundMode="outline"

        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"
        app:boxCornerRadiusBottomStart="@dimen/RadioButton"
        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"

        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:helperTextEnabled="false"
        app:helperTextTextColor="@color/design_default_color_error"

        app:layout_constraintTop_toBottomOf="@id/fechaNacimiento"
        app:layout_constraintEnd_toStartOf="@id/mes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mes"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginVertical="320dp"
        android:hint="@string/Mes"
        app:boxBackgroundMode="outline"

        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"

        app:boxCornerRadiusBottomStart="@dimen/RadioButton"
        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"

        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/design_default_color_error"
        app:layout_constraintStart_toEndOf="@id/anualidad"
        app:layout_constraintEnd_toEndOf="@id/guideline"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dia"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginVertical="320dp"
        android:hint="@string/Dia"
        app:boxBackgroundMode="outline"

        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"

        app:boxCornerRadiusBottomStart="@dimen/RadioButton"
        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"

        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/design_default_color_error"
        app:layout_constraintStart_toEndOf="@id/mes"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/celular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anualidad"
        android:layout_marginHorizontal="@dimen/default_margin"

        android:hint="@string/celular"
        android:layout_marginVertical="1dp"
        app:layout_constraintVertical_chainStyle="packed"

        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"
        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"
        app:boxCornerRadiusBottomStart="@dimen/RadioButton"

        app:helperTextTextColor="@color/design_default_color_error"
        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_local_phone_24"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/celular"
        android:layout_marginHorizontal="@dimen/default_margin"

        android:hint="@string/email"
        android:layout_marginVertical="1dp"
        app:layout_constraintVertical_chainStyle="packed"

        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        app:boxCornerRadiusTopEnd="@dimen/RadioButton"
        app:boxCornerRadiusTopStart="@dimen/RadioButton"
        app:boxCornerRadiusBottomEnd="@dimen/RadioButton"
        app:boxCornerRadiusBottomStart="@dimen/RadioButton"

        app:helperTextTextColor="@color/design_default_color_error"
        app:counterEnabled="false"
        app:counterMaxLength="10"

        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_mail_24"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="135dp"
        android:text="@string/Confirmar"
        android:textColor="@color/black"

        app:cornerRadius="25dp"
        android:textStyle="bold"
        android:textSize="20dp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/IniciarSesion"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_cuentaNueva"
        app:layout_constraintEnd_toEndOf="@id/guideline4"
        android:text="Inicia sesión"
        android:textAppearance="@style/Theme.ProyectAcuenta.AppBarOverlay"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_account_circle_24"
        app:iconTint="@color/green"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/ellipse1"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ellipse2"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="645dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline5"
        android:src="@drawable/ellipse4"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="250dp" />




</androidx.constraintlayout.widget.ConstraintLayout>

